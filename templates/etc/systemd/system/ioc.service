[Unit]
Description=EPICS Soft IOC <%= @name %>
Requires=<%= @systemd_requires.join(' ') %>
After=<%= @systemd_after.join(' ') %>
RequiresMountsFor=<%= @systemd_requires_mounts_for.join(' ') %>

[Service]
<% @real_env_vars.each_pair do |key, val| -%>
Environment="<%= key %>=<%= val %>"
<% end -%>
EnvironmentFile=-/etc/iocs/<%= @name -%>/config
ExecStart=/usr/bin/procServ --foreground --quiet --chdir=<%= @absbootdir -%> --ignore=^C^D^] --coresize=<%= @coresize -%> --restrict --logfile=<%= @procServ_logfile -%> --name <%= @name -%> <%= @consolePort -%> <%= @absstartscript %>
Restart=always
User=<%= @username %>

[Install]
WantedBy=multi-user.target